                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Width="120"
                                    Height="25"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    CornerRadius="0"
                                    SelectedIndex="{Binding View02}">

                                    <ComboBoxItem IsSelected="True">启用</ComboBoxItem>
                                    <ComboBoxItem>不启用</ComboBoxItem>
                                </zui:ZComboBox>

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,5,0,10"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="工位三" />
                                <zui:ZComboBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Width="120"
                                    Height="25"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
