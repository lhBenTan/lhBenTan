                            Grid.Row="0"
                            Margin="0,0,0,5"
                            Padding="10,10,0,0"
                            BorderThickness="0"
                            Header="控制台"
                            HeaderBackground="Transparent" />
                        <Grid>
                            <TextBox
                                x:Name="ConsoleView"
                                Height="300"
                                Margin="5,5,5,5"
                                Background="#0A0A0A"
                                BorderBrush="#FF2D2D30"
                                BorderThickness="0,0"
                                DockPanel.Dock="Bottom"
                                FontFamily="Consolas"
                                FontSize="12"
                                Foreground="White"
                                HorizontalScrollBarVisibility="Auto"
                                IsReadOnly="True"
                                MaxLines="1000"
                                Text="{Binding ConsoleText}"
                                TextChanged="ConsoleView_TextChanged"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </Grid>

                    </StackPanel>
                </zui:AccordionItem>

                <zui:AccordionItem
                    Margin="0,0,0,0"
                    Header=" 切换机种数据"
>
                    <StackPanel>
                        <zui:ZGroupBox
                            Grid.Row="0"
                            Margin="0,0,0,5"
                            Padding="10,10,0,0"
                            BorderThickness="0"
                            Header="切换"
                            HeaderBackground="Transparent">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />

                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="导出配置" />
                                <zui:FlatButton
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="100"
                                    Margin="-100,6,-10,-1"
                                    VerticalAlignment="Top"
                                    Click="UploadConfigFile_Click"
                                    Content="导出"
                                    FontSize="15"
                                    Foreground="WhiteSmoke" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="载入配置" />
                                <zui:FlatButton
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="100"
                                    Margin="-100,6,-10,-1"
                                    VerticalAlignment="Top"
                                    Click="DownloadConfigFile_Click"
                                    Content="载入"
                                    FontSize="15"
                                    Foreground="WhiteSmoke"
                                    IsEnabled="{Binding IsDeveloperLogin}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="配置名称" />
                              
                                <zui:IconTextBox
                                    x:Name="ConfigName"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="120"
                                    Height="25"
                                    Margin="-80,6,-10,-1"
                                    Padding="0,0,4,0"
                                    VerticalAlignment="Top"
                                    Background="#FFF2F2FB"
                                    FontWeight="Bold"
                                    Text ="{Binding ConfigName}"
                                    IsShowIcon="False"
                                    TextAlignment="Right" />

                            </Grid>


                        </zui:ZGroupBox>
                       
                    </StackPanel>
                </zui:AccordionItem>

            </zui:Accordion>

        </Grid>

    </Grid>
</UserControl>
